#include <stdio.h>

struct student {
    char name[50]; 
    int age;
    char grade[5]; 
};

void GetStudent(struct student child[][10], int *room);

int main() {
    struct student children[20][10];
    int group;

    GetStudent(children, &group);

    return 0;
}//End function

void GetStudent(struct student child[][10], int *room) {
    printf("Enter the number of rooms: ");
    scanf("%d", room);

    for (int i = 0; i < *room; ++i) {
        printf("=================================\n");
        printf("Enter information for room | %d |\n", i + 1);
        for (int j = 0; j < 10; ++j) {
            printf("Enter name for student %d: ", j + 1);
            scanf("%s", child[i][j].name);

            printf("Enter age for student %d: ", j + 1);
            scanf("%d", &child[i][j].age);
            
            printf("Enter grade for student %d: ", j + 1);
            scanf("%s", child[i][j].grade);

            printf("--------------------------------------\n");
        }//End for
    }//End for
}//End function
