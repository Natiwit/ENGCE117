void reverse(char str1[], char str2[]);

int main() {
    char text[50] = "I Love You";
    char out[50];

    reverse(text, out);

    return 0;
}

void reverse(char str1[], char str2[]) {
    int a = 0;

    while (str1[a] != '\0') {
        a++;
    }

    for (int i = 0; i < a; i++) {
        str2[i] = str1[a - 1 - i];
    }
    str2[a] = '\0';
    printf("ต้นฉบับ : %s\n", str1);
    printf("ย้อนกลับ : %s\n", str2);
}
